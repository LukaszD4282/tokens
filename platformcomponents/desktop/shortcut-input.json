{
  "shortcutinput": {
    "comment": "Applied to shortcut input control",
    "figma": "https://www.figma.com/file/H19CutixoN8SJGO5EXwcc8/Components---MacOS?node-id=19446%3A511338&t=KD9FGfaNUPcWk5qz-0",
    "inactive": {
      "#normal": {
        "border": "@theme-outline-input-normal",
        "background": "@theme-background-primary-ghost",
        "textBackground": "@theme-background-solid-secondary-normal",
        "text": "@theme-text-primary-normal"

      },
      "#hovered": {
        "border": "@theme-outline-input-normal",
        "background": "@theme-background-primary-hover",
        "textBackground": "@theme-background-primary-ghost",
        "text": "@theme-text-primary-normal"
      },
      "#pressed": {
        "border": "@theme-outline-input-active",
        "background": "@theme-background-primary-active",
        "textBackground": "@theme-background-primary-ghost",
        "text": "@theme-text-primary-normal"
      },
      "#disabled": {
        "border": "none",
        "background": "@theme-background-secondary-normal",
        "textBackground": "@theme-background-primary-ghost",
        "text": "@theme-text-primary-normal"
      }
    },
    "active": {      
      "reassign": {
        "border": "@theme-outline-input-active",
        "background": "@theme-background-primary-active",
        "textBackground": "@theme-background-solid-primary-normal",
        "text": "@theme-text-primary-disabled"
      },
      "available": {
        "border": "@theme-outline-join-normal",
        "background": "@theme-background-primary-active",
        "textBackground": "@theme-background-secondary-active",
        "text": "@theme-text-primary-normal"
      },
      "unavailable": {
        "border": "@theme-outline-cancel-normal",
        "background": "@theme-background-primary-active",
        "textBackground": "@theme-background-secondary-active",
        "text": "@theme-text-primary-normal"
      },
      "checking": {
        "border": "@theme-outline-input-active",
        "background": "@theme-background-primary-active",
        "textBackground": "@theme-background-secondary-active",
        "text": "@theme-text-primary-normal"
      },
      "populated": {
        "border": "@theme-outline-input-active",
        "background": "@theme-background-primary-active",
        "textBackground": "@theme-background-secondary-active",
        "text": "@theme-text-primary-normal"
      }

    }   
  }
}
